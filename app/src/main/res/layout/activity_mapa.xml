<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapaActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/scroll"
            app:layout_constraintStart_toStartOf="@id/scroll"
            app:layout_constraintTop_toTopOf="@id/scroll">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="1120dp"
                android:src="@drawable/mapamundo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/scroll"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/scroll"
                app:layout_constraintTop_toTopOf="@id/scroll"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="NotSibling" />

            <LinearLayout
                android:id="@+id/Linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/level11"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_transparent"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/level10"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_transparent"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/level9"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="155dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_transparent"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/level8"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="205dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_transparent"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/entrenar4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="165dp"
                    android:layout_marginTop="72dp"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_transparent"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/level7"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="175dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_transparent"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/entrenar3"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="135dp"
                        android:layout_marginTop="77dp"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_transparent"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:scaleType="centerCrop"/>

                    <ImageButton
                        android:id="@+id/level6"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="77dp"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_transparent"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:scaleType="centerCrop"
                        android:visibility="invisible"/>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/level5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="230dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_transparent"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/pelea"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="85dp"
                        android:layout_marginTop="77dp"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_transparent"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/level4"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="77dp"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_transparent"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:scaleType="centerCrop"
                        android:visibility="invisible"/>

                    <ImageButton
                        android:id="@+id/lupanar"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="47dp"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_transparent"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/entrenar1"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="52dp"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_transparent"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/level3"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="17dp"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_transparent"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:scaleType="centerCrop"
                        android:visibility="invisible"/>

                    <ImageButton
                        android:id="@+id/entrenar2"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_transparent"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/level2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_transparent"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/level1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="230dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_transparent"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnVolver"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primaryColor"
                android:elevation="2dp"
                android:shadowColor="#5C5C5C"
                android:text="@string/volver_al_juego"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintTop_toBottomOf="@id/Linear"
                app:strokeColor="#FFFFFF" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>