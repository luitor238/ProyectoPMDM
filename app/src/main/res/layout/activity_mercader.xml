                    android:shadowColor="#5C5C5C"
                    android:text="@string/comprar"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="5dp"
                    app:strokeColor="#FFFFFF"/>

                <Button
