<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4DADA"
    tools:context=".VerArticuloActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="601dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/carta_avatar1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="118dp"
                android:layout_height="24dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="31dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTipoArticulo"
                android:layout_width="92dp"
                android:layout_height="20dp"
                android:layout_marginTop="31dp"
                android:text=""
                android:textAlignment="viewEnd"
                android:textColor="@color/material_dynamic_neutral50"
                android:textSize="16sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="271dp"
            android:layout_height="209dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/dadoblanco" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="43dp"
                android:layout_height="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="25dp"
                android:text="@string/peso" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:text="" />

            <TextView
                android:id="@+id/textViewPeso"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:text="@string/precio" />

            <TextView
                android:id="@+id/textViewPrecio"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="28dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:text="@string/aumento_ataque" />

            <TextView
                android:id="@+id/textViewAumentoAtaque"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text=""
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="55dp"
            android:background="@color/material_dynamic_neutral70" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:text="@string/aumento_defensa" />

            <TextView
                android:id="@+id/textViewAumentoDefensa"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text=""
                android:textAlignment="viewEnd" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="55dp"
            android:background="@color/material_dynamic_neutral70" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:text="@string/aumento_vida" />

            <TextView
                android:id="@+id/textViewAumentoVida"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text=""
                android:textAlignment="viewEnd" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnVolver"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#2196F3"
        android:elevation="2dp"
        android:shadowColor="#5C5C5C"
        android:text="@string/volver"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:rippleColor="#A11818"
        app:strokeColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>